/* ===========================
   PRINT
   =========================== */
@media print {
  .events-tabs-nav,
  .events-overlay {
    display: none !important;
  }
  
  .events-cards-stack {
    display: block;
  }
  
  .events-card {
    position: relative;
    opacity: 1;
    visibility: visible;
    page-break-inside: avoid;
    margin-bottom: 2rem;
  }
}

/* ===========================
   PERFORMANCE
   =========================== */

/* Optimisation GPU */
.events-card,
.events-card-inner,
.events-tab-btn {
  transform: translateZ(0);
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

