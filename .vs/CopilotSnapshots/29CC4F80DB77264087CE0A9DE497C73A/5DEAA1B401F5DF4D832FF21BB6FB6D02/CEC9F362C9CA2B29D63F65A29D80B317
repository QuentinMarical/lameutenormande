/* ===========================
   RESPONSIVE : TABLETTE
   =========================== */
@media (min-width: 768px) {
  .events-tab-btn {
    font-size: 1rem;
    padding: 0.875rem 1.25rem;
  }
  
  .events-card {
    padding: 0 0.5rem;
  }
}

/* ===========================
   RESPONSIVE : DESKTOP
   =========================== */
@media (min-width: 992px) {
  /* En desktop, pas de changement au padding-top (navbar gérée différemment) */
  .events-section {
    padding-top: 80px;
  }

  /* Masquer la navigation par onglets sur desktop */
  .events-tabs-nav {
    display: none;
  }
  
  /* Réorganiser pour affichage côte à côte */
  .events-cards-stack {
    display: flex;
    gap: 1.5rem;
  }
  
  .events-card {
    position: relative;
    flex: 0 0 50%;
    width: 50%;
    padding: 0 0.75rem;
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transition: none;
  }
  
  /* Ajuster les cartes pour desktop */
  .events-card-inner {
    border: 1px solid rgba(108, 117, 125, 0.6);
  }
  
  /* Meilleur espacement */
  .events-content {
    padding: 0 24px;
  }
}

/* ===========================
   RESPONSIVE : GRAND ÉCRAN
   =========================== */
@media (min-width: 1200px) {
  .events-content {
    max-width: 1600px;
  }
  
  .events-card {
    padding: 0 1rem;
  }
}

/* ===========================
   ÉTATS ET INTERACTIONS
   =========================== */

/* État de chargement */
.events-card.loading .events-iframe {
  background: linear-gradient(
    90deg,
    rgba(0, 0, 0, 0.3) 0%,
    rgba(255, 255, 255, 0.1) 50%,
    rgba(0, 0, 0, 0.3) 100%
  );
  background-size: 200% 100%;
  animation: loadingShimmer 1.5s ease-in-out infinite;
}

@keyframes loadingShimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* Focus pour accessibilité */
.events-tab-btn:focus-visible {
  outline: 2px solid #ffc107;
  outline-offset: 2px;
}

